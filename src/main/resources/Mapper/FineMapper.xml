<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.FineMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.entity.Fine">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="borrow_record_id" property="borrowRecordId" jdbcType="INTEGER"/>
        <result column="amount" property="amount" jdbcType="DECIMAL"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="pay_time" property="payTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, borrow_record_id, amount, status, create_time, pay_time
    </sql>

    <!-- 插入罚金记录 -->
    <insert id="insert" parameterType="com.example.demo.entity.Fine">
        INSERT INTO fine
            (id, user_id, borrow_record_id, amount, status, create_time)
        VALUES
            (#{id}, #{userId}, #{borrowRecordId}, #{amount}, #{status}, #{createTime})
    </insert>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM fine
        WHERE id = #{id}
    </select>

    <!-- 根据用户ID查询 -->
    <select id="selectByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM fine
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <!-- 根据借阅记录ID查询 -->
    <select id="selectByBorrowRecordId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM fine
        WHERE borrow_record_id = #{borrowRecordId}
        ORDER BY create_time DESC
    </select>

    <!-- 查询用户未支付的罚金 -->
    <select id="selectUnpaidByUserId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM fine
        WHERE user_id = #{userId} AND status = 0
        ORDER BY create_time DESC
    </select>

    <!-- 更新罚金状态为已支付 -->
    <update id="updateToPaid">
        UPDATE fine
        SET status = 1, pay_time = #{payTime}
        WHERE id = #{id} AND status = 0
    </update>

    <!-- 统计用户总罚金金额 -->
    <select id="sumAmountByUserId" parameterType="java.lang.Integer" resultType="java.math.BigDecimal">
        SELECT COALESCE(SUM(amount), 0)
        FROM fine
        WHERE user_id = #{userId}
    </select>

    <!-- 统计用户未支付罚金总额 -->
    <select id="sumUnpaidAmountByUserId" parameterType="java.lang.Integer" resultType="java.math.BigDecimal">
        SELECT COALESCE(SUM(amount), 0)
        FROM fine
        WHERE user_id = #{userId} AND status = 0
    </select>

    <!-- 删除罚金记录 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM fine WHERE id = #{id}
    </delete>

</mapper>